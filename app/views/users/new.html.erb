<div class="col-sm-6 col-sm-offset-1">
<%= form_for :user, url: {action: 'create'} do |f|%>
<fieldset>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <%= f.submit 'Submit' %>
</fieldset>
<% end %>
</div>